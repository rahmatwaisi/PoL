{
    "name": "rahmatwaisi/pol-gateway",
    "description": "PoL is a laravel package to easily use polcard.ir payment services in your applications",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "polcard",
        "gateway",
        "پل کارت",
        "polcard-laravel",
        "pol",
        "payment",
        "pay",
        "bank",
        "gateway",
        "polcard.ir"
    ],
    "support": {
        "issues": "https://github.com/mr648/rahmatwaisi/issues",
        "source": "https://github.com/rahmatwaisi/PoL"
    },
    "authors": [
        {
            "name": "Rahmat Waisi",
            "email": "rahmatwaisi@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "guzzlehttp/guzzle": "^7"
    },
    "autoload": {
        "psr-4": {
            "RahmatWaisi\\PoL\\": "src/",
            "RahmatWaisi\\PoL\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RahmatWaisi\\PoL\\Providers\\PoLServiceProvider"
            ],
            "aliases": {
                "POL": "RahmatWaisi\\PoL\\Facade\\PoL"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable" : true
}
